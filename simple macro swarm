-- Feather UI Library for Roblox
-- Inspired by Feather Client Mod Menu

local FeatherUI = {}
FeatherUI.__index = FeatherUI

-- Colors based on the screenshot's aesthetic
local COLORS = {
    Background = Color3.fromRGB(30, 30, 35),
    Sidebar = Color3.fromRGB(25, 25, 30),
    Category = Color3.fromRGB(40, 40, 45),
    Text = Color3.fromRGB(240, 240, 240),
    Accent = Color3.fromRGB(100, 150, 255),
    Button = Color3.fromRGB(50, 50, 55),
    ButtonHover = Color3.fromRGB(60, 60, 65),
    ToggleOn = Color3.fromRGB(100, 200, 100),
    ToggleOff = Color3.fromRGB(80, 80, 85)
}

local TWEEN_SERVICE = game:GetService("TweenService")
local USER_INPUT_SERVICE = game:GetService("UserInputService")
local RUN_SERVICE = game:GetService("RunService")

-- Utility function to create rounded corners
local function applyRoundCorners(frame, cornerRadius)
    local uiCorner = Instance.new("UICorner")
    uiCorner.CornerRadius = UDim.new(0, cornerRadius)
    uiCorner.Parent = frame
    return uiCorner
end

-- Utility function to create padding
local function applyPadding(frame, padding)
    local uiPadding = Instance.new("UIPadding")
    uiPadding.PaddingLeft = UDim.new(0, padding)
    uiPadding.PaddingRight = UDim.new(0, padding)
    uiPadding.PaddingTop = UDim.new(0, padding)
    uiPadding.PaddingBottom = UDim.new(0, padding)
    uiPadding.Parent = frame
    return uiPadding
end

function FeatherUI:CreateWindow(title)
    local screenGui = Instance.new("ScreenGui")
    screenGui.Name = "FeatherUI"
    screenGui.ZIndexBehavior = Enum.ZIndexBehavior.Sibling
    screenGui.ResetOnSpawn = false
    
    if gethui then
        screenGui.Parent = gethui()
    elseif syn and syn.protect_gui then
        syn.protect_gui(screenGui)
        screenGui.Parent = game:GetService("CoreGui")
    else
        screenGui.Parent = game:GetService("CoreGui")
    end
    
    -- Main container
    local mainFrame = Instance.new("Frame")
    mainFrame.Name = "MainFrame"
    mainFrame.Size = UDim2.new(0, 700, 0, 500)
    mainFrame.Position = UDim2.new(0.5, -350, 0.5, -250)
    mainFrame.BackgroundColor3 = COLORS.Background
    mainFrame.AnchorPoint = Vector2.new(0.5, 0.5)
    mainFrame.Parent = screenGui
    
    applyRoundCorners(mainFrame, 8)
    
    -- Title bar
    local titleBar = Instance.new("Frame")
    titleBar.Name = "TitleBar"
    titleBar.Size = UDim2.new(1, 0, 0, 40)
    titleBar.BackgroundColor3 = COLORS.Sidebar
    titleBar.Parent = mainFrame
    
    applyRoundCorners(titleBar, 8)
    
    local titleText = Instance.new("TextLabel")
    titleText.Name = "Title"
    titleText.Size = UDim2.new(1, -40, 1, 0)
    titleText.Position = UDim2.new(0, 15, 0, 0)
    titleText.BackgroundTransparency = 1
    titleText.Text = title or "FEATHER CLIENT"
    titleText.TextColor3 = COLORS.Text
    titleText.TextXAlignment = Enum.TextXAlignment.Left
    titleText.Font = Enum.Font.GothamBold
    titleText.TextSize = 18
    titleText.Parent = titleBar
    
    -- Close button
    local closeButton = Instance.new("TextButton")
    closeButton.Name = "CloseButton"
    closeButton.Size = UDim2.new(0, 30, 0, 30)
    closeButton.Position = UDim2.new(1, -35, 0.5, -15)
    closeButton.AnchorPoint = Vector2.new(0, 0.5)
    closeButton.BackgroundColor3 = COLORS.Button
    closeButton.TextColor3 = COLORS.Text
    closeButton.Text = "Ã—"
    closeButton.Font = Enum.Font.GothamBold
    closeButton.TextSize = 20
    closeButton.Parent = titleBar
    
    applyRoundCorners(closeButton, 4)
    
    closeButton.MouseButton1Click:Connect(function()
        screenGui:Destroy()
    end)
    
    -- Sidebar (Categories)
    local sidebar = Instance.new("Frame")
    sidebar.Name = "Sidebar"
    sidebar.Size = UDim2.new(0, 180, 1, -40)
    sidebar.Position = UDim2.new(0, 0, 0, 40)
    sidebar.BackgroundColor3 = COLORS.Sidebar
    sidebar.Parent = mainFrame
    
    -- Content area
    local contentFrame = Instance.new("Frame")
    contentFrame.Name = "ContentFrame"
    contentFrame.Size = UDim2.new(1, -180, 1, -40)
    contentFrame.Position = UDim2.new(0, 180, 0, 40)
    contentFrame.BackgroundColor3 = COLORS.Background
    contentFrame.ClipsDescendants = true
    contentFrame.Parent = mainFrame
    
    -- Category buttons container
    local categoryList = Instance.new("ScrollingFrame")
    categoryList.Name = "CategoryList"
    categoryList.Size = UDim2.new(1, 0, 1, 0)
    categoryList.BackgroundTransparency = 1
    categoryList.ScrollBarThickness = 4
    categoryList.ScrollBarImageColor3 = COLORS.Accent
    categoryList.Parent = sidebar
    
    local uiListLayout = Instance.new("UIListLayout")
    uiListLayout.Padding = UDim.new(0, 5)
    uiListLayout.Parent = categoryList
    
    applyPadding(categoryList, 10)
    
    -- Content container
    local contentScrolling = Instance.new("ScrollingFrame")
    contentScrolling.Name = "ContentScrolling"
    contentScrolling.Size = UDim2.new(1, 0, 1, 0)
    contentScrolling.BackgroundTransparency = 1
    contentScrolling.ScrollBarThickness = 4
    contentScrolling.ScrollBarImageColor3 = COLORS.Accent
    contentScrolling.Parent = contentFrame
    
    local contentListLayout = Instance.new("UIListLayout")
    contentListLayout.Padding = UDim.new(0, 10)
    contentListLayout.Parent = contentScrolling
    
    applyPadding(contentScrolling, 15)
    
    local window = {
        ScreenGui = screenGui,
        MainFrame = mainFrame,
        TitleBar = titleBar,
        Sidebar = sidebar,
        ContentFrame = contentFrame,
        Categories = {},
        CurrentCategory = nil
    }
    
    setmetatable(window, self)
    
    -- Make window draggable
    local dragging = false
    local dragStart, frameStart
    
    titleBar.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            dragging = true
            dragStart = input.Position
            frameStart = mainFrame.Position
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    dragging = false
                end
            end)
        end
    end)
    
    titleBar.InputChanged:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseMovement and dragging then
            local delta = input.Position - dragStart
            mainFrame.Position = UDim2.new(
                frameStart.X.Scale, frameStart.X.Offset + delta.X,
                frameStart.Y.Scale, frameStart.Y.Offset + delta.Y
            )
        end
    end)
    
    return window
end

function FeatherUI:CreateCategory(name)
    local categoryButton = Instance.new("TextButton")
    categoryButton.Name = name .. "Button"
    categoryButton.Size = UDim2.new(1, 0, 0, 40)
    categoryButton.BackgroundColor3 = COLORS.Category
    categoryButton.TextColor3 = COLORS.Text
    categoryButton.Text = name:upper()
    categoryButton.Font = Enum.Font.Gotham
    categoryButton.TextSize = 14
    categoryButton.AutoButtonColor = false
    categoryButton.Parent = self.Sidebar:FindFirstChild("CategoryList")
    
    applyRoundCorners(categoryButton, 6)
    
    local categoryContent = Instance.new("Frame")
    categoryContent.Name = name .. "Content"
    categoryContent.Size = UDim2.new(1, 0, 0, 0)
    categoryContent.BackgroundTransparency = 1
    categoryContent.Visible = false
    categoryContent.Parent = self.ContentFrame:FindFirstChild("ContentScrolling")
    
    local contentLayout = Instance.new("UIListLayout")
    contentLayout.Padding = UDim.new(0, 10)
    contentLayout.Parent = categoryContent
    
    local category = {
        Name = name,
        Button = categoryButton,
        Content = categoryContent,
        Elements = {}
    }
    
    table.insert(self.Categories, category)
    
    -- Select first category by default
    if #self.Categories == 1 then
        self:SelectCategory(category)
    end
    
    categoryButton.MouseButton1Click:Connect(function()
        self:SelectCategory(category)
    end)
    
    -- Hover effects
    categoryButton.MouseEnter:Connect(function()
        if self.CurrentCategory ~= category then
            TWEEN_SERVICE:Create(categoryButton, TweenInfo.new(0.2), {
                BackgroundColor3 = COLORS.ButtonHover
            }):Play()
        end
    end)
    
    categoryButton.MouseLeave:Connect(function()
        if self.CurrentCategory ~= category then
            TWEEN_SERVICE:Create(categoryButton, TweenInfo.new(0.2), {
                BackgroundColor3 = COLORS.Category
            }):Play()
        end
    end)
    
    return category
end

function FeatherUI:SelectCategory(category)
    if self.CurrentCategory then
        -- Deselect previous category
        TWEEN_SERVICE:Create(self.CurrentCategory.Button, TweenInfo.new(0.2), {
            BackgroundColor3 = COLORS.Category
        }):Play()
        self.CurrentCategory.Content.Visible = false
    end
    
    -- Select new category
    self.CurrentCategory = category
    category.Content.Visible = true
    category.Content.Size = UDim2.new(1, 0, 0, category.Content.UIListLayout.AbsoluteContentSize.Y)
    
    TWEEN_SERVICE:Create(category.Button, TweenInfo.new(0.2), {
        BackgroundColor3 = COLORS.Accent
    }):Play()
end

function FeatherUI:CreateToggle(category, name, defaultValue, callback)
    local toggleFrame = Instance.new("Frame")
    toggleFrame.Name = name .. "Toggle"
    toggleFrame.Size = UDim2.new(1, 0, 0, 40)
    toggleFrame.BackgroundColor3 = COLORS.Category
    toggleFrame.Parent = category.Content
    
    applyRoundCorners(toggleFrame, 6)
    
    local toggleLabel = Instance.new("TextLabel")
    toggleLabel.Name = "Label"
    toggleLabel.Size = UDim2.new(0.7, -10, 1, 0)
    toggleLabel.Position = UDim2.new(0, 10, 0, 0)
    toggleLabel.BackgroundTransparency = 1
    toggleLabel.TextColor3 = COLORS.Text
    toggleLabel.Text = name
    toggleLabel.TextXAlignment = Enum.TextXAlignment.Left
    toggleLabel.Font = Enum.Font.Gotham
    toggleLabel.TextSize = 14
    toggleLabel.Parent = toggleFrame
    
    local toggleButton = Instance.new("TextButton")
    toggleButton.Name = "ToggleButton"
    toggleButton.Size = UDim2.new(0, 50, 0, 25)
    toggleButton.Position = UDim2.new(1, -60, 0.5, -12.5)
    toggleButton.AnchorPoint = Vector2.new(1, 0.5)
    toggleButton.BackgroundColor3 = defaultValue and COLORS.ToggleOn or COLORS.ToggleOff
    toggleButton.Text = ""
    toggleButton.AutoButtonColor = false
    toggleButton.Parent = toggleFrame
    
    applyRoundCorners(toggleButton, 12)
    
    local toggleCircle = Instance.new("Frame")
    toggleCircle.Name = "ToggleCircle"
    toggleCircle.Size = UDim2.new(0, 21, 0, 21)
    toggleCircle.Position = UDim2.new(0, defaultValue and 29 or 2, 0.5, -10.5)
    toggleCircle.AnchorPoint = Vector2.new(0, 0.5)
    toggleCircle.BackgroundColor3 = COLORS.Text
    toggleCircle.Parent = toggleButton
    
    applyRoundCorners(toggleCircle, 10)
    
    local state = defaultValue or false
    
    local function updateToggle()
        local targetPos = state and UDim2.new(0, 29, 0.5, -10.5) or UDim2.new(0, 2, 0.5, -10.5)
        local targetColor = state and COLORS.ToggleOn or COLORS.ToggleOff
        
        TWEEN_SERVICE:Create(toggleCircle, TweenInfo.new(0.2), {
            Position = targetPos
        }):Play()
        
        TWEEN_SERVICE:Create(toggleButton, TweenInfo.new(0.2), {
            BackgroundColor3 = targetColor
        }):Play()
        
        if callback then
            callback(state)
        end
    end
    
    toggleButton.MouseButton1Click:Connect(function()
        state = not state
        updateToggle()
    end)
    
    updateToggle()
    
    return {
        Frame = toggleFrame,
        SetState = function(newState)
            state = newState
            updateToggle()
        end,
        GetState = function()
            return state
        end
    }
end

function FeatherUI:CreateButton(category, name, callback)
    local button = Instance.new("TextButton")
    button.Name = name .. "Button"
    button.Size = UDim2.new(1, 0, 0, 40)
    button.BackgroundColor3 = COLORS.Button
    button.TextColor3 = COLORS.Text
    button.Text = name
    button.Font = Enum.Font.Gotham
    button.TextSize = 14
    button.AutoButtonColor = false
    button.Parent = category.Content
    
    applyRoundCorners(button, 6)
    
    button.MouseButton1Click:Connect(function()
        if callback then
            callback()
        end
    end)
    
    -- Hover effects
    button.MouseEnter:Connect(function()
        TWEEN_SERVICE:Create(button, TweenInfo.new(0.2), {
            BackgroundColor3 = COLORS.ButtonHover
        }):Play()
    end)
    
    button.MouseLeave:Connect(function()
        TWEEN_SERVICE:Create(button, TweenInfo.new(0.2), {
            BackgroundColor3 = COLORS.Button
        }):Play()
    end)
    
    return button
end

function FeatherUI:CreateSlider(category, name, minValue, maxValue, defaultValue, callback)
    local sliderFrame = Instance.new("Frame")
    sliderFrame.Name = name .. "Slider"
    sliderFrame.Size = UDim2.new(1, 0, 0, 60)
    sliderFrame.BackgroundColor3 = COLORS.Category
    sliderFrame.Parent = category.Content
    
    applyRoundCorners(sliderFrame, 6)
    
    local sliderLabel = Instance.new("TextLabel")
    sliderLabel.Name = "Label"
    sliderLabel.Size = UDim2.new(1, -20, 0, 20)
    sliderLabel.Position = UDim2.new(0, 10, 0, 5)
    sliderLabel.BackgroundTransparency = 1
    sliderLabel.TextColor3 = COLORS.Text
    sliderLabel.Text = name .. ": " .. defaultValue
    sliderLabel.TextXAlignment = Enum.TextXAlignment.Left
    sliderLabel.Font = Enum.Font.Gotham
    sliderLabel.TextSize = 14
    sliderLabel.Parent = sliderFrame
    
    local sliderTrack = Instance.new("Frame")
    sliderTrack.Name = "Track"
    sliderTrack.Size = UDim2.new(1, -20, 0, 6)
    sliderTrack.Position = UDim2.new(0, 10, 0, 35)
    sliderTrack.BackgroundColor3 = COLORS.Button
    sliderTrack.Parent = sliderFrame
    
    applyRoundCorners(sliderTrack, 3)
    
    local sliderFill = Instance.new("Frame")
    sliderFill.Name = "Fill"
    sliderFill.Size = UDim2.new(0, 0, 1, 0)
    sliderFill.BackgroundColor3 = COLORS.Accent
    sliderFill.Parent = sliderTrack
    
    applyRoundCorners(sliderFill, 3)
    
    local sliderButton = Instance.new("TextButton")
    sliderButton.Name = "SliderButton"
    sliderButton.Size = UDim2.new(0, 20, 0, 20)
    sliderButton.Position = UDim2.new(0, -10, 0.5, -10)
    sliderButton.AnchorPoint = Vector2.new(0, 0.5)
    sliderButton.BackgroundColor3 = COLORS.Text
    sliderButton.Text = ""
    sliderButton.AutoButtonColor = false
    sliderButton.Parent = sliderTrack
    
    applyRoundCorners(sliderButton, 10)
    
    local value = defaultValue or minValue
    local isDragging = false
    
    local function updateSlider()
        local percentage = (value - minValue) / (maxValue - minValue)
        sliderFill.Size = UDim2.new(percentage, 0, 1, 0)
        sliderButton.Position = UDim2.new(percentage, -10, 0.5, -10)
        sliderLabel.Text = name .. ": " .. math.floor(value * 100) / 100
        
        if callback then
            callback(value)
        end
    end
    
    local function getValueFromPosition(x)
        local relativeX = math.clamp(x - sliderTrack.AbsolutePosition.X, 0, sliderTrack.AbsoluteSize.X)
        local percentage = relativeX / sliderTrack.AbsoluteSize.X
        return minValue + percentage * (maxValue - minValue)
    end
    
    sliderButton.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            isDragging = true
            
            local connection
            connection = RUN_SERVICE.RenderStepped:Connect(function()
                if not isDragging then
                    connection:Disconnect()
                    return
                end
                
                local mousePos = USER_INPUT_SERVICE:GetMouseLocation()
                value = getValueFromPosition(mousePos.X)
                updateSlider()
            end)
            
            input.Changed:Connect(function()
                if input.UserInputState == Enum.UserInputState.End then
                    isDragging = false
                end
            end)
        end
    end)
    
    sliderTrack.InputBegan:Connect(function(input)
        if input.UserInputType == Enum.UserInputType.MouseButton1 then
            local mousePos = USER_INPUT_SERVICE:GetMouseLocation()
            value = getValueFromPosition(mousePos.X)
            updateSlider()
        end
    end)
    
    updateSlider()
    
    return {
        Frame = sliderFrame,
        SetValue = function(newValue)
            value = math.clamp(newValue, minValue, maxValue)
            updateSlider()
        end,
        GetValue = function()
            return value
        end
    }
end

function FeatherUI:CreateLabel(category, name)
    local labelFrame = Instance.new("Frame")
    labelFrame.Name = name .. "Label"
    labelFrame.Size = UDim2.new(1, 0, 0, 30)
    labelFrame.BackgroundTransparency = 1
    labelFrame.Parent = category.Content
    
    local label = Instance.new("TextLabel")
    label.Name = "Label"
    label.Size = UDim2.new(1, -20, 1, 0)
    label.Position = UDim2.new(0, 10, 0, 0)
    label.BackgroundTransparency = 1
    label.TextColor3 = COLORS.Text
    label.Text = name
    label.TextXAlignment = Enum.TextXAlignment.Left
    label.Font = Enum.Font.Gotham
    label.TextSize = 14
    label.Parent = labelFrame
    
    return label
end

-- Example usage function
function FeatherUI:Example()
    local window = self:CreateWindow("FEATHER CLIENT")
    
    -- Create categories from the screenshot
    local categories = {
        "All",
        "Mod Menu",
        "HUD",
        "Hypixel",
        "PvP",
        "Armor",
        "Status",
        "Auto Text",
        "BOSSBAR",
        "CPS",
        "Combo",
        "Display",
        "Coordinates"
    }
    
    local categoryObjects = {}
    
    for _, categoryName in ipairs(categories) do
        categoryObjects[categoryName] = window:CreateCategory(categoryName)
    end
    
    -- Add some example elements to the "PvP" category
    local pvpCategory = categoryObjects["PvP"]
    
    window:CreateToggle(pvpCategory, "Auto Clicker", false, function(state)
        print("Auto Clicker:", state)
    end)
    
    window:CreateSlider(pvpCategory, "CPS", 1, 20, 10, function(value)
        print("CPS:", value)
    end)
    
    window:CreateButton(pvpCategory, "Test Button", function()
        print("Button clicked!")
    end)
    
    window:CreateLabel(pvpCategory, "PvP Settings")
    
    -- Add elements to "HUD" category
    local hudCategory = categoryObjects["HUD"]
    
    window:CreateToggle(hudCategory, "Show Coordinates", true, function(state)
        print("Show Coordinates:", state)
    end)
    
    window:CreateToggle(hudCategory, "Show FPS", true, function(state)
        print("Show FPS:", state)
    end)
    
    return window
end

return FeatherUI
